{
    "name": "boots/boots",
    "type": "library",
    "description": "A rapid wordpress plugin and theme development framework",
    "keywords": ["wordpress","rapid","plugin","theme","boots","framework"],
    "homepage": "http://wpboots.com",
    "license": "MIT",
    "authors": [
        {
            "name": "M. Kamal Khan",
            "email": "shout@bhittani.com",
            "homepage": "http://bhittani.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Boots\\Installer\\": "src/Installer/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.4||>=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "vlucas/phpdotenv": "^2.4",
        "nikic/php-parser": "^2.1",
        "oomphinc/composer-installers-extender": "^1.1",
        "mikey179/vfsStream": "^1.6"
    },
    "scripts": {
        "test": "phpunit tests",
        "post-package-install": "Boots\\Installer\\Install::installExtension",
        "post-package-update": "Boots\\Installer\\Install::updateExtension",
        "post-create-project-cmd": "Boots\\Installer\\Install::installBoots"
    },
    "extra": {
        "installer-types": ["boots-extension"],
        "installer-paths": {
            "extend/{$name}": ["type:boots-extension"]
        }
    }
}
