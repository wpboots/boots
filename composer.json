{
    "name": "boots/boots",
    "type": "framework",
    "description": "A rapid wordpress plugin and theme development framework",
    "keywords": ["wordpress","rapid","plugin","theme","boots","framework"],
    "homepage": "http://wpboots.com",
    "license": "MIT",
    "authors": [
        {
            "name": "M. Kamal Khan",
            "email": "shout@bhittani.com",
            "homepage": "http://bhittani.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Boots\\Mounter\\": "mounter/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.4,<8.0-DEV"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "vlucas/phpdotenv": "^2.4",
        "nikic/php-parser": "^2.1",
        "boots/installer": "^0.1.0",
        "mikey179/vfsStream": "^1.6",
        "bhittani/php-parser": "^0.1.1",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "scripts": {
        "test": "phpunit tests --colors=always",
        "coverage": "phpunit tests --coverage-text",
        "coverage-html": "phpunit tests --coverage-html coverage",
        "coverage-clover": "phpunit tests --coverage-clover clover.xml",
        "cs-check": "phpcs --standard=PSR2 src",
        "cs-fix": "phpcbf --standard=PSR2 src",
        "check": ["@cs-check", "@test"],
        "mount": "Boots\\Mounter\\Mount::mountExtensions",
        "post-create-project-cmd": "Boots\\Mounter\\Mount::mountBoots",
        "post-autoload-dump": "@mount"
    }
}
