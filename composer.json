{
    "name": "boots/boots",
    "type": "library",
    "description": "Rapid wordpress plugin and theme development framework",
    "keywords": ["wordpress","framework","boots"],
    "homepage": "http://wpboots.com",
    "license": "GPLv2",
    "authors": [
        {
            "name": "M. Kamal Khan",
            "email": "shout@bhittani.com",
            "homepage": "http://bhittani.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Boots\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.4||>=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "vlucas/phpdotenv": "^2.4",
        "nikic/php-parser": "^2.1",
        "oomphinc/composer-installers-extender": "^1.1"
    },
    "scripts": {
        "post-package-install": "Boots\\Installer\\Install::installExtension",
        "post-package-update": "Boots\\Installer\\Install::updateExtension",
        "post-root-package-install": "Boots\\Installer\\Install::installBoots"
    },
    "extra": {
        "installer-types": ["boots-extension"],
        "installer-paths": {
            "extend/{$name}": ["type:boots-extension"]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        },
        { "packagist": false }
    ]
}
